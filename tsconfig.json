{
  "include": [
    "src",
    "tests",
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    // "declaration": true,
    "sourceMap": true,
    "noEmit": false,
    "noEmitOnError": true,
    // "emitDeclarationOnly": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": false,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "importHelpers": true,
    "strict": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    // "stripInternal": true
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "esm": false,
    "transpileOnly": false,
    "compilerOptions": {
      "module": "node16",
      "target": "es2022",
      "moduleResolution": "node16"
    }
  }
}