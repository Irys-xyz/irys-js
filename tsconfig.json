{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    
    "strict": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "/tmp",
    "experimentalDecorators": true,
    "paths": {
      "$/utils": [
        "node/utils.ts"
      ]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "esm": false,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["src/web/bundle.ts"]
}
